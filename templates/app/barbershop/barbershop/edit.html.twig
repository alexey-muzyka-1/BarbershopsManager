{% extends 'base.html.twig' %}

{% block title %}Barbershops{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('barbershop_info.barbershops') }}">Barbershops</a></li>
        <li class="breadcrumb-item"><a href="{{ path('barbershop_info.barbershops.show', {'id': barbershop.id}) }}">{{ barbershop.name }}</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}